<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <!-- Customize your theme here. -->
        <!--action bar color, if you use toolbar, you must set the toolbar backgroung-->
        <item name="colorPrimary">@color/toolbar_color_defalt</item>
        <!--statusbar color-->
        <item name="colorPrimaryDark">@color/toolbar_color_defalt</item>
        <item name="colorAccent">@color/blue</item>
        <item name="toolbarStyle">@style/ClubToolbar</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="ClubToolbar" parent="Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item><!-- 设置该属性解决空白部分-->
    </style>

    <style name="AppThemeTransparent" parent="AppTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/AnimationActivity</item>
    </style>

    <!-- popupwindow 动画 addShop -->
    <style name="popwindow_anim_style">
        <item name="android:windowEnterAnimation">@anim/pop_show_anim</item>
        <item name="android:windowExitAnimation">@anim/pop_hidden_anim</item>
    </style>

</resources>
