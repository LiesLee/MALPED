<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:wheel="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_grey"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#222222">

        <LinearLayout
            android:id="@+id/ll_goback"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:background="@drawable/selector_default_click_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@mipmap/icon_title_back" />
        </LinearLayout>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=""
            android:maxLines="1"
            android:maxLength="8"
            android:ellipsize="end"
            android:textColor="@color/golden"
            android:textSize="17dp" />


        <TextView
            android:id="@+id/tv_share"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="end|center_vertical"
            android:padding="10dp"
            android:text="分享"
            android:visibility="gone"
            android:textColor="@color/golden"
            android:textSize="15dp" />


    </android.support.v7.widget.Toolbar>


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <com.views.ProgressWebView
            android:id="@+id/webview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.views.ProgressWheel
            android:id="@+id/pw_loding"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:visibility="gone"
            wheel:matProg_barColor="@color/golden"
            wheel:matProg_fillRadius="false"
            wheel:matProg_linearProgress="true" />

    </RelativeLayout>

</LinearLayout>